@using ToDoList.Models;
@{
  Layout = "_Layout";
}
<div class="container">
  <br>
  <h1>Items</h1>

  @if (@Model.Count == 0)
  {
    <h3>No items have been added yet!</h3>
  } 

  @foreach (Item item in Model)
  {
    <li>@item.Description</li>
  }
<h5>@Html.ActionLink("Add new item", "Create")</h5>

</div>