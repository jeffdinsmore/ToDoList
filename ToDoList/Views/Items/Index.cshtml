@using ToDoList.Models;
<!DOCTYPE html>
<html>
  <head>
    <title>To Do List</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container">
      <br>
      <h1>To Do List</h1>
      @if (Model.Count == 0)
      {
        <p>There are no items in the list.</p>
      }
      <ul>
        @foreach (Item item in Model)
        {
          <li><a href='/items/@item.Id'>@item.Description</a></li>
        }
      </ul>
      <button class="btn btn-secondary"><a href="/items/new">Add a new item.</a></button>
      <br><br>
      <button class="btn btn-secondary"><a href="/">Go Back to Homepage</a></button>
      <br><br>
      <form action="/items/delete" method="post">
        <button type="submit" name="button" class="btn btn-secondary">Clear All Items</button>
      </form>
    </div>
  </body>
</html
