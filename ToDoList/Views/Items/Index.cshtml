@using ToDoList.Models;
@model List<ToDoList.Models.Item>;
@{
  Layout = "_Layout";
}
<div class="container">
  <br>
  <h1>Items</h1>

  @if (@Model.Count == 0)
  {
    <h3>No items have been added yet!</h3>
  } 

  <ul>
  @foreach(Item item in Model)
  {
    @* <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.Category.Name</li> *@
    <li>@Html.ActionLink($"{item.Description}", "Details", new {id = item.ItemId}) </li>
  }
</ul>
<h5>@Html.ActionLink("Add new item", "Create")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>
<h5>@Html.ActionLink("Look up an item", "Search")</h5>
</div>