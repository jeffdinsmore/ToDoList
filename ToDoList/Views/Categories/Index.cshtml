@using ToDoList.Models;
@model List<ToDoList.Models.Category>;
@{
  Layout = "_Layout";
}
<div class="container">
  <br>
  <h1>Categories</h1>

  @if (@Model.Count == 0)
  {
    <h3>No categoires have been added yet!</h3>
  } 

  <ul>
  @foreach(Category category in Model)
  {
      <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</li>
  }
</ul>
<h5>@Html.ActionLink("Add new item", "Create")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>
</div>