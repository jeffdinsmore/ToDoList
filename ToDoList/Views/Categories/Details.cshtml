@model ToDoList.Models.Category
@* @using ToDoList.Models; *@
@{
  Layout = "_Layout";
}
<div class="container">
  <br>
  <h2>Category Details</h2>
  <hr />
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>
  
  @if (@Model.Items.Count == 0)
  {
    <p>This category does not contain any items</p>
  }
else
{
  <h4>Items the category contains:</h4>
  <ul>
  @foreach(var join in Model.Items)
  {
    <li>@join.Item.Description</li>
  }
  </ul>
}
  <h5>@Html.ActionLink("Back to categories", "Index")</h5>
  <h5>@Html.ActionLink("Edit Category", "Edit", new { id = Model.CategoryId })</h5>
  <h5>@Html.ActionLink("Delete Category", "Delete", new { id = Model.CategoryId })</h5>
</div>